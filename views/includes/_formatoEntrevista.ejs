<style>
  :root {
    --bulma-primary-h: 227deg;
    --bulma-primary-s: 54%;
    --bulma-primary-l: 44%;
    --bulma-link-h: 224deg;
    --bulma-link-s: 84%;
    --bulma-link-l: 20%;
    --bulma-info-h: 216deg;
    --bulma-info-l: 91%;
    --bulma-success-h: 175deg;
  }
  .person {
    border: 1px solid black;
    padding: 10px;
    min-width: 150px;
    background-color: #ffffff;
    display: inline-block;
  }
  .person div {
    text-align: center;
  }
  .person .name {
    font-size: 16px;
  }
  .person .parentDrop,
  .person .spouseDrop,
  .person .childDrop {
    width: auto;
    min-width: 80px;
    min-height: 90px;
    display: inline-block;
    position: relative;
    padding-top: 15px;
  }
  .person .parentDrop > span,
  .person .spouseDrop > span,
  .person .childDrop > span {
    position: absolute;
    top: 2px;
    left: 2px;
    font-weight: bold;
  }
  .parentDrop > .person,
  .spouseDrop > .person,
  .childDrop > .person {
    margin-top: 20px;
  }
  .tree {
    transform: scale(0.8);
    transform-origin: top left;
  }
  .tree ul {
    padding-top: 20px;
    position: relative;
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
    -moz-transition: all 0.5s;
  }
  .tree li {
    display: table-cell;
    text-align: center;
    list-style-type: none;
    position: relative;
    padding: 20px 5px 0 5px;
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
    -moz-transition: all 0.5s;
  }

  .tree li::before,
  .tree li::after {
    content: "";
    position: absolute;
    top: 0;
    right: 50%;
    border-top: 1px solid #ccc;
    width: 50%;
    height: 20px;
  }
  .tree li::after {
    right: auto;
    left: 50%;
    border-left: 1px solid #ccc;
  }
  .tree li:only-child::after,
  .tree li:only-child::before {
    display: none;
  }
  .tree li:only-child {
    padding-top: 0;
  }
  .tree li:first-child::before,
  .tree li:last-child::after {
    border: 0 none;
  }
  .tree li:last-child::before {
    border-right: 1px solid #ccc;
    border-radius: 0 5px 0 0;
    -webkit-border-radius: 0 5px 0 0;
    -moz-border-radius: 0 5px 0 0;
  }
  .tree li:first-child::after {
    border-radius: 5px 0 0 0;
    -webkit-border-radius: 5px 0 0 0;
    -moz-border-radius: 5px 0 0 0;
  }
  .tree ul ul::before {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    border-left: 1px solid #ccc;
    width: 0;
    height: 20px;
  }
  .tree li .parent {
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
    -moz-transition: all 0.5s;
    margin-top: 10px;
  }
  .tree li .parent::before {
    content: "";
    position: absolute;
    top: 45px;
    left: 50%;
    border-left: 1px solid #ccc;
    width: 3px;
    height: 10px;
  }
  .tree li .family {
    position: relative;
  }
  .tree li .family .spouse {
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: 95px;
  }
  .tree li .family .spouse::before {
    display: none;
  }
  .input.superior {
    margin: 0;
    margin-bottom: -10px;
    font-size: 10px;
  }

  .input.inferior {
    margin: 0;
    margin-top: -5px;
    font-size: 10px;
  }

  .select.is-danger.familiar {
    margin: 0;
    margin-top: 5px;
    font-size: 10px;
  }
</style>

<section class="section">
  <div class="container">
    <h1 class="title is-3">Formato de entrevista</h1>
    <div class="interviewFormat columns is-vcentered ml-5"></div>
    <br /><br />
    <h3 class="title is-4">Datos Personales</h3>
    <form action="formatoEntrevista" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <div class="columns is-vcentered ml-5">
        <div class="column">
          <label for="apellidoPaterno" class="label">Apellido Paterno:</label>
          <input
            class="input"
            type="text"
            placeholder="García"
            id="apellidoP"
            name="apellidoP"
            required
          />
        </div>
        <div class="column">
          <label for="apellidoMaterno" class="label">Apellido Materno:</label>
          <input
            class="input"
            type="text"
            placeholder="López"
            id="apellidoM"
            name="apellidoM"
            required
          />
        </div>
        <div class="column">
          <label for="name" class="label">Nombre:</label>
          <input
            class="input"
            type="text"
            placeholder="Arturo"
            id="nombre"
            name="nombre"
            required
          />
        </div>
      </div>
      <br />
      <div class="columns ml-5">
        <div class="column is-one-quarter">
          <label for="birthdate" class="label">Fecha de nacimiento:</label>
          <input
            class="input"
            type="date"
            id="fechaNacimiento"
            name="fechaNacimiento"
            required
          />
        </div>
        <div class="column is-offset-5">
          <label for="age" class="label">Edad (años cumplidos):</label>

          <div class="select is-primary">
            <select id="selectAgeIF" class="m-0" , name="edad"></select>
          </div>
        </div>
      </div>
      <br />
      <div class="columns is-vcentered ml-5">
        <div class="column is-one-third">
          <label for="nationality" class="label">Nacionalidad:</label>
          <input
            class="input"
            type="text"
            placeholder="Mexicana"
            id="nacionalidad"
            name="nacionalidad"
            required
          />
        </div>
        <div class="column is-one-third">
          <label for="origin" class="label">Originario de:</label>
          <input
            class="input"
            type="text"
            placeholder="Guerrero"
            id="origen"
            name="origen"
            required
          />
        </div>
        <div class="column is-one-third">
          <label for="gender" class="label">Género:</label>
          <input
            class="input"
            type="text"
            placeholder="Mujer"
            id="genero"
            name="genero"
            required
          />
        </div>
      </div>
      <br />
      <div class="columns is-vcentered ml-5">
        <div class="column is-one-third">
          <label for="maritalStatus" class="label">Estado Civil:</label>
          <div class="select is-primary">
            <select name="estadoCivil" id="maritalStatus" required>
              <option disabled hidden selected>Seleccione una opción</option>
              <option value="soltero">Soltero/a</option>
              <option value="casado">Casado/a</option>
              <option value="divorciado">Divorciado/a</option>
              <option value="separado">Separado/a</option>
              <option value="viudo">Viudo/a</option>
              <option value="unionLibre">Unión libre</option>
            </select>
          </div>
        </div>
        <div class="column is-two-thirds">
          <label for="address" class="label">Dirección Actual:</label>
          <input
            class="input"
            type="text"
            placeholder="Calle del Mármol #32"
            id="dirrecionA"
            name="direccionA"
            required
          />
        </div>
      </div>
      <br />
      <div class="columns is-vcentered ml-5">
        <div class="column is-one-third">
          <label for="cellphone" class="label">Celular:</label>
          <input
            class="input"
            type="tel"
            placeholder="123 456 7890"
            id="celular"
            name="celular"
            required
          />
        </div>
        <div class="column is-one-third">
          <label for="phone" class="label">Teléfono(s):</label>
          <input
            class="input"
            type="tel"
            placeholder="123 456 7890"
            id="telefono"
            name="telefono"
            required
          />
        </div>
        <div class="column is-one-third">
          <label for="email" class="label">Correo:</label>
          <input
            class="input"
            type="email"
            placeholder="ejemplo@gmail.com"
            id="correo"
            name="correo"
            required
          />
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <button
            class="button has-background-primary has-text-warning ml-6"
            type="submit"
          >
            Continuar
          </button>
        </div>
      </div>
    </form>
  </div>
</section>
<script>
  const dropdown = document.getElementById("selectAgeIF");
  for (let i = 18; i <= 100; i++) {
    const option = document.createElement("option");
    option.value = i;
    option.textContent = i;
    dropdown.appendChild(option);
  }
  const date = new Date();
  const formattedDate = date.toLocaleString();
</script>
