<%- include('includes/_navbarP')%>
<style>
  .fullHeight {
    min-height: 90vh;
    margin-top: 20px;
  }
</style>
<section class="section fullHeight">
 
  <div class="container mt-5">
    <% if (info) { %>
      <article class="message is-success">
        <div class="message-header">
          <p>Éxito</p>
          <button class="delete" aria-label="delete" onclick="this.parentElement.parentElement.remove()"></button>
        </div>
        <div class="message-body">
          <%= info %>
        </div>
      </article>
    <% } %>

    <% if (grupo) { %>
      <div class="box">
        <h3 class="title is-4">Detalles del Grupo</h3>
        <p><strong>ID del Grupo:</strong> <%= grupo.id %></p>
        <p><strong>Posgrado:</strong> <%= grupo.posgrado %></p>
        <p><strong>Generación:</strong> <%= grupo.generacion %></p>
      </div>
    <% } %>
  </div>

  <div class="buttons is-centered">
    <a href="/psicologa/crearGrupo"
      ><button class="button m-5 is-primary has-text-white">Regresar</button></a
    >
    <a href="/psicologa/inicio"
      ><button class="button m-5 is-primary has-text-white">
        Confirmar
      </button></a
    >
  </div>
</section>

<%- include('includes/_footer')%>
